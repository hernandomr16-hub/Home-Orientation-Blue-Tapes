{
    "build": {
        "builder": "NIXPACKS",
        "watchPatterns": [
            "backend/**"
        ]
    },
    "deploy": {
        "startCommand": "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/api/health",
        "restartPolicyType": "ON_FAILURE"
    }
}